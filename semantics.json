[
  {
    "name": "taskDescription",
    "label": "Task description",
    "type": "text",
    "widget": "html",
    "importance": "high",
    "description": "Describe your task here.",
    "enterMode": "div",
    "tags": [
      "strong",
      "em",
      "u",
      "a",
      "ul",
      "ol",
      "h2",
      "h3",
      "hr",
      "pre",
      "code"
    ],
    "font": {
      "size": true,
      "color": true,
      "background": true
    }
  },
  {
    "name": "text",
    "label": "Text",
    "type": "text",
    "importance": "high",
    "widget": "html",
    "description": "Enter the text that contains words to be highlighted.",
    "enterMode": "div",
    "tags": [
      "strong",
      "em",
      "u"
    ],
    "important": {
      "description": "<ul><li>Mark parts of the text that students need to select with asterisks (*) before and after.</li><li>An asterisk can be added <em>within highlighted words</em> by adding a backward slash in front of it (\\*).</li><li>Inside the asterisks, use two colons (::) and a highlight option name to set the expected highlight.</li><li>If you require two consecutive colons <em>within highlighted words</em>, write one of them with a backward slash in front of it (\\::).</li></ul>",
      "example": "In this example, *this needs to be highlighted::yellow* by the student."
    }
  },
  {
    "name": "highlightOptions",
    "label": "Highlight options",
    "importance": "high",
    "type": "list",
    "widgets": [
      {
        "name": "VerticalTabs",
        "label": "Default"
      }
    ],
    "min": 1,
    "max": 7,
    "entity": "Highlight option",
    "field": {
      "name": "highlightoption",
      "type": "group",
      "label": "Highlight option",
      "fields": [
        {
          "name": "name",
          "type": "text",
          "label": "Name",
          "description": "Name used in the editor to set the highlight style required for part of your text.",
          "importance": "medium"
        },
        {
          "name": "backgroundColor",
          "type": "text",
          "label": "Color",
          "description": "Color for this highlight option",
          "importance": "medium",
          "default": "#fce900",
          "widget": "colorSelector",
          "spectrum": {
            "showInput": true,
            "showInitial": true,
            "showPalette": true,
            "palette": [
              ["#e3000f", "#ed6ea7"],
              ["#fce900", "#ea5725"],
              ["#009bb4", "#9d74b1"],
              ["#85bd3f", "#3ec0f0"]
            ]
          }
        },
        {
          "name": "description",
          "type": "text",
          "label": "Description",
          "description": "Label of this highlight style in the color legend",
          "importance": "medium",
          "optional": true
        }
      ]
    }
  },
  {
    "name": "overallFeedback",
    "type": "group",
    "label": "Overall Feedback",
    "importance": "low",
    "expanded": true,
    "fields": [
      {
        "name": "overallFeedback",
        "type": "list",
        "widgets": [
          {
            "name": "RangeList",
            "label": "Default"
          }
        ],
        "importance": "high",
        "label": "Define custom feedback for any score range",
        "description": "Click the \"Add range\" button to add as many ranges as you need. Example: 0-20% Bad score, 21-91% Average Score, 91-100% Great Score!",
        "entity": "range",
        "min": 1,
        "defaultNum": 1,
        "optional": true,
        "field": {
          "name": "overallFeedback",
          "type": "group",
          "importance": "low",
          "fields": [
            {
              "name": "from",
              "type": "number",
              "label": "Score Range",
              "min": 0,
              "max": 100,
              "default": 0,
              "unit": "%"
            },
            {
              "name": "to",
              "type": "number",
              "min": 0,
              "max": 100,
              "default": 100,
              "unit": "%"
            },
            {
              "name": "feedback",
              "type": "text",
              "label": "Feedback for defined score range",
              "importance": "low",
              "placeholder": "Fill in the feedback",
              "optional": true
            }
          ]
        }
      }
    ]
  },
  {
    "name": "behaviour",
    "type": "group",
    "label": "Behavioural settings",
    "importance": "low",
    "description": "These options will let you control how the task behaves.",
    "fields": [
      {
        "name": "useCapitalization",
        "state": "new",
        "label": "Use capitalization menu",
        "description": "Check this option if the students need to answer whether the highlighted text should be written in uppercase or in lowercase.",
        "type": "boolean",
        "importance": "low",
        "default": false,
        "optional": true
      },
      {
        "name": "capitalization",
        "state": "new",
        "type": "group",
        "label": "Capitalization",
        "importance": "low",
        "expanded": true,
        "fields": [
          {
            "name": "menuTitle",
            "label": "Title for menu",
            "type": "text",
            "default": "Capitalization"
          },
          {
            "name": "introduction",
            "label": "Introduction",
            "type": "text",
            "widget": "html",
            "importance": "low",
            "optional": true,
            "default": "",
            "description": "Set an optional introduction",
            "enterMode": "div",
            "tags": [
              "strong",
              "em",
              "u",
              "a",
              "pre",
              "code"
            ]
          },
          {
            "name": "labelUppercase",
            "label": "Label for uppercase button",
            "type": "text",
            "default": "Uppercase"
          },
          {
            "name": "labelLowercase",
            "label": "Label for lowercase button",
            "type": "text",
            "default": "Lowercase"
          }
        ],
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "useCapitalization",
              "equals": true
            }
          ]
        }
      },
      {
        "name": "enableRetry",
        "label": "Enable \"Retry\"",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "name": "enableSolutionsButton",
        "label": "Enable \"Solution\"",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      }
    ]
  },
